<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/machineDetailsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMachineDetailsToolbar"
        android:minHeight="?attr/actionBarSize" />

    <ImageView
        android:id="@+id/machineDetailsClose"
        android:layout_width="@dimen/machine_details_close_size"
        android:layout_height="@dimen/machine_details_close_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/common_default_margin"
        android:layout_marginStart="@dimen/common_default_margin"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/machine_details_close_icon" />

    <TextView
        android:id="@+id/machineDetailsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/common_big_text_size"
        android:textStyle="bold" />
</RelativeLayout>