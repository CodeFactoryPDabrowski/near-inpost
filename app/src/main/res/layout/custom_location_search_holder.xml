<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customLocationViewHolderLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_search_view_height"
    android:background="@drawable/custom_location_search_view_ripple"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/customLocationViewHolderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingEnd="@dimen/common_default_margin"
        android:paddingStart="@dimen/common_default_margin"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/common_standard_text_size" />

    <TextView
        android:id="@+id/customLocationViewHolderSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/common_default_margin"
        android:paddingStart="@dimen/common_default_margin"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/common_secondary_text_size" />

</LinearLayout>

