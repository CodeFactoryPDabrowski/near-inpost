<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Style of main search view, input for places to find nearest inPost.-->
    <style name="MainSearchViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_search_view_height</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:longClickable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/common_default_margin</item>
        <item name="android:paddingEnd">@dimen/common_default_margin</item>
        <item name="android:textSize">@dimen/common_big_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:hint">@string/custom_location_search_view_hint</item>
    </style>

    <!--TODO: Prepare app for previous Android versions-->
    <!--Location view holder layout style-->
    <style name="CustomLocationHolderLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_search_view_height</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--Main fragment view holder layout style-->
    <style name="MainFragmentHolderLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/main_fragment_holder_selector</item>
    </style>

    <!--Main result dialog radio button style-->
    <style name="MainMaxResultsDialogRadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/common_default_margin</item>
        <item name="android:layout_marginTop">@dimen/common_default_margin</item>
        <item name="android:textSize">@dimen/common_standard_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>