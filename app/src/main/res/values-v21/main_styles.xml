<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Location view holder layout style-->
    <style name="CustomLocationHolderLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_search_view_height</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/custom_location_search_view_ripple</item>
    </style>

    <!--Main fragment view holder layout style android ver 21+-->
    <style name="MainFragmentHolderLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_location_search_view_ripple</item>
    </style>
</resources>